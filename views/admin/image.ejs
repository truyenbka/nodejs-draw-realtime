<!DOCTYPE html>
<html lang="en">
<head>
	<title>IMAGE MANAGER</title>
	<% include ../admin/partials/head %>
</head>
<body class="container">

	<header>
		<% include ../admin/partials/header %>
	</header>

	<main>
		<div class="row">
			<div class="col-sm-9">
				<div class="jumbotron">
					<table class="table table-hover">
				      	<thead>
				        	<tr>
					          	<th>#Img</th>
					          	<th>Image</th>
					          	<th>Action</th>
				        	</tr>
				      </thead>
				      <tbody>
				      	<% for(var i in images) { %>
				        <tr>
				          <td class="col-md-2">IMG<span class="badge"><%= images[i].id %></span></td>
				          <td><img src="<%= images[i].url %>" style="width:10%" class="img-thumbnail pull-left" data-action="zoom"/></td>
				          <td>@</td>
				        </tr>
				        <% } %>
				      </tbody>
				    </table>
				</div>
				
			</div>
			<div class="col-sm-3">
				
				<div class="well">
					<h3><span class="fa fa-picture-o"></span> Image Manager</h3>
					<a href="/admin/image" class="list-group-item active">List</a>
					<a href="/admin/image/fullsize" class="list-group-item">View full</a>
				</div>

			</div>
		</div>
	</main>

	<footer>
		<% include ../admin/partials/footer %>
	</footer>
	
</body>
</html>