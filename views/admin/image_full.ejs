<!DOCTYPE html>
<html lang="en">
<head>
	<title>IMAGE MANAGER</title>
	<% include ../admin/partials/head %>
</head>
<body class="container">

	<header>
		<% include ../admin/partials/header %>
	</header>

	<main>
		<div class="row">
			<div class="col-sm-9">
				<div class="jumbotron">
					<img src="<%= img[0].url %>" id="img1" style="display: none;"/>
					<img src="<%= img[1].url %>" id="img2" style="display: none;"/>
					<img src="<%= img[2].url %>" id="img3" style="display: none;"/>
					<img src="<%= img[3].url %>" id="img4" style="display: none;"/>
					<img src="<%= img[4].url %>" id="img5" style="display: none;"/>
					<img src="<%= img[5].url %>" id="img6" style="display: none;"/>
					<img src="<%= img[6].url %>" id="img7" style="display: none;"/>
					<img src="<%= img[7].url %>" id="img8" style="display: none;"/>
					<img src="<%= img[8].url %>" id="img9" style="display: none;"/>

					<canvas id="myCanvas" width="720" height="720" style="border:1px solid #d3d3d3;"></canvas>
					<script>
						window.onload = function() {
						    var c = document.getElementById("myCanvas");
						    var ctx = c.getContext("2d");
						    var img1 = document.getElementById("img1");
						    var img2 = document.getElementById("img2");
						    var img3 = document.getElementById("img3");
						    var img4 = document.getElementById("img4");
						    var img5 = document.getElementById("img5");
						    var img6 = document.getElementById("img6");
						    var img7 = document.getElementById("img7");
						    var img8 = document.getElementById("img8");
						    var img9 = document.getElementById("img9");
						    ctx.drawImage(img1, 0, 0, 240, 240);
						    ctx.drawImage(img2, 240, 0, 240, 240);
						    ctx.drawImage(img3, 480, 0, 240, 240);
						    ctx.drawImage(img4, 0, 240, 240, 240);
						    ctx.drawImage(img5, 240, 240, 240, 240);
						    ctx.drawImage(img6, 480, 240, 240, 240);
						    ctx.drawImage(img7, 0, 480, 240, 240);
						    ctx.drawImage(img8, 240, 480, 240, 240);
						    ctx.drawImage(img9, 480, 480, 240, 240);
						}
					</script>
				</div>
				
			</div>
			<div class="col-sm-3">
				
				<div class="well">
					<h3><span class="fa fa-picture-o"></span> Image Manager</h3>
					<a href="/admin/image" class="list-group-item">List</a>
					<a href="/admin/image/fullsize" class="list-group-item active">View full</a>
				</div>

			</div>
		</div>
	</main>

	<footer>
		<% include ../admin/partials/footer %>
	</footer>
	
</body>
</html>