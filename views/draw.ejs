<!DOCTYPE html>
<html>
	<head>
		<title>Realtime Drawing</title>
		<link href="/js/jquery/jquery.minicolors.css" rel="stylesheet">
		<link href="/css/draw.css" rel="stylesheet">
		<link href="/css/bootstrap.min.css" rel="stylesheet">
		<script>
			window.me = <%- JSON.stringify({
				id: user.id,
				username: user.username,
				level: user.level
			}) %>;
			window.images = <%- JSON.stringify(images) %>;
			window.images.forEach(function(img){
				img.img_object = new Image();
				img.img_object.src = img.url;
			})
			window.image = <%- JSON.stringify(image) %>;
		</script>
		<script src="/js/socket.io.js"></script>
		<script src="/js/jquery/jquery-1.9.1.js"></script>
		<script src="/js/jquery/jquery-ui.js"></script>
		<script src="/js/jquery/jquery.minicolors.js"></script>
		<script src="/js/draw.js"></script>
		<script type="text/javascript">
			$(document).ready(function() {
				$("#monitorcam").draggable({ cursor: "move" });
				document.getElementById('monitorcam').style.display ='none';
				$('#minicolore').minicolors({ opacity:true });
			});
		</script>
	</head>
	<body>
		<div id="monitorcam" title="" alt=""></div>
		<div id="controlli">
			<div style="float:left;">
			<button id="salvafoto" class="btn btn-success" type="submit" style="margin-bottom:10px">Save the draw</button><br/>
				<select id="spessore" class="form-control col-xs-2" style="margin-bottom:10px">
					<option value="3" selected="selected">Select size pencil</option>
					<option value="1">1</option>
					<option value="2">2</option>
					<option value="3">3</option>
					<option value="4">4</option>
					<option value="5">5</option>
					<option value="6">6</option>
					<option value="7">7</option>
					<option value="8">8</option>
					<option value="9">9</option>
					<option value="10">10</option>
					<option value="11">11</option>
					<option value="12">12</option>
					<option value="13">13</option>
					<option value="13">14</option>
					<option value="15">15</option>
					<option value="16">16</option>
					<option value="17">17</option>
					<option value="18">18</option>
					<option value="19">19</option>
					<option value="200">200</option>
				</select>
				<select id="cubes" class="form-control" name="mode" style="margin-bottom:10px">
					  <option value="0">Free style</option>
					  <option value="1">Rectangle</option>
					  <option value="2">Ellipse</option>
				</select>

			<input type="text" class="minicolors" id="minicolore" value="#000000" data-opacity="1.0" />

			<input type="text" id="scrivi" size="37" class="form-control" placeholder="Type then enter to chat !!!" style="margin-top:10px"/><br />
			<div id="testichat"></div>
			</div>
		</div>
		<div id="cursors"></div>
		<canvas name="mycanvas" id="paper" width="620" height="620" style="border:1px solid #ccc;cursor:url(/img/pencil.png),auto"></canvas>
		<footer>
		</footer>
	</body>
</html>